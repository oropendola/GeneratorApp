<%= form_for(@portfolio_item) do |f| %>
  <div class='row'>
    <div class='col-md-6'>

      <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: 'form-control' %>
      </div> 

    </div>
    <div class='col-md-6'>

      <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :main_image %>
      <%= f.text_field :main_image, class: 'form-control' %>
      </div>

      <div class="form-group">
      <%= f.label :thumb_image %>
      <%= f.text_field :thumb_image, class: 'form-control' %>
      </div>

    </div>
  </div>


  <hr>

  <div class='col-md-12'>

    <h2>Technologies used</h2>

    <div>
      <%= f.fields_for :technologies do |technology_form| %>
         <%= render 'technology_fields', f: technology_form %>
      <% end %>

      <div>
        <%= link_to_add_association 'Add technology', f, :technologies %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit 'Save Portfolio', class: 'btn btn-primary btn-block' %>
    </div>

  </div>

<% end %>